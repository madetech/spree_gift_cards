<script async='true'>GiftCards.init()</script>

<div class="panel panel-default">
  <div class="panel-heading"><%= Spree.t(:lookup_redemption_code) %></div>
  <div class="panel-body gift-card-code-lookup">
    <%= form_for :gift_card, url: admin_gift_cards_path, html: { id: 'lookup-redemption-code' } do |f| %>
      <div class="input-group">
        <%= f.text_field :redemption_code, class: "form-control" %>
        <span class="input-group-btn">
          <%= f.submit Spree.t(:lookup_gift_card), class: 'lookup-gift-card-button btn btn-primary' %>
        </span>
      </div>
    <% end %>
  </div>
</div>
